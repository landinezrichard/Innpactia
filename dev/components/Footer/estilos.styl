/*FOOTER*/

.Footer
	display inline-block
	width 100%
	background url('../images/01-index/footer.png') center no-repeat
	margin-top -50px
	height 358px
	
	&-row
		display inline-block
		width 100%
		margin-top 100px
	
	&-menu1
	&-menu2
		display inline-block
		margin 25px 10px
		vertical-align top
	&-list
		list-style none
		padding 0
		margin 0 0
		width 100%
		text-align left
		
		& li
			margin .5em
		& li a
			cursor pointer
			color $black
			font-weight 400
			font-size .91em
			display inline-block
			width 100%
			&:hover
				font-weight 700
	&-item
		margin .5em
		
	&-link
		cursor pointer
		color $black
		font-weight 400
		font-size .91em
		display inline-block
		width 100%
		&:hover
			font-weight 700
	&-redes
		display inline-block
		width 100%
		list-style none
		margin 0
		padding 0
		& li
			display inline-block
			width 32px
			height 32px
			margin 5px 2.5%
		& li a
			cursor pointer
			display inline-block
			vertical-align middle
			width 100%
			height 100%
			&:hover
				animation animateRedes 1s infinite
		& li a img
			width 100%
			height 100%
			vertical-align middle
	&-redesItem
		cursor pointer
		display inline-block
		width 36px
		height 36px
		margin 5px 2.5%
		&:hover
			animation animateRedes 1s infinite
	&-copy
		display inline-block
		width 100%
	&-back
		display none
		width 64px
		height 64px
		position fixed
		bottom 0
		right 0
		z-index 99999
		cursor pointer
	&-backIcon
		display block
		width 64px
		height 64px
		line-height 64px
		background $transparent_blue
		color $white
		
		
@keyframes animateRedes
	16.65%
		transform translateX(2px)
	33.3%
		transform translateX(-2px)
	49.95%
		transform translateX(2px)
	66.6%
		transform translateX(-2px)
	83.25%
		transform translateX(1px)
	100%
		transform translateX(0)

@media screen and (min-width:960px)
	.Footer
		background url('../images/01-index/footer.png') left no-repeat
		&-row
			// margin-left 40%
			// width 60%
			display flex
			justify-content flex-end
		&-menu1
		&-menu2			
			margin 35px 10px
		&-redes
			margin 65px 0
			width 240px
			vertical-align middle
		&-back
			right 10%
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Footer
		&-row
			// margin-left 0
			// width 100%
			justify-content center
			position relative
		&-menu1
		&-menu2
			margin 35px 40px
		&-list
			& li a
				font-size 1.15em
		&-link
			font-size 1.15em
		&-redes
			position absolute
			right 0
			top 0
@media screen and (min-width:1440px)
	.Footer
		&-back
			right 15%
@media screen and (min-width:1600px)
	.Footer
		&-back
			right 20%