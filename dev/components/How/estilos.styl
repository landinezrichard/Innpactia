/*HOW*/

.How
	background $white
	// background $blue
	display inline-block
	width 100%
	// height 662px
	// height 854px
	left 0
	right 0
	position absolute
	// top -662px
	// top -854px
	top -200%
	box-sizing border-box
	border-bottom 1px solid #767676
		
	&-title
		color $blue
		// color $white
		font-size 1.4em
		font-weight 700
		
	&-imgContainer
		display inline-block
		width 100%
		max-width 1200px
		
		
		& img
			width 100%
			height 100%
		
	&-list
		display flex
		width 100%
		flex-flow row nowrap
		justify-content space-around
	&-item
		display inline-block
		width 32.33%
		box-sizing border-box
		padding 20px
		vertical-align top
		& img
			width 100%
			height 100%
	
	&-itemTitle
		font-size .95em
		font-weight 600
		color $white
		margin .5em 0
		
	&-txt
		color $white
		margin 0
		font-size 0.87em
		font-weight 400
		
	&-desc
		color $white
		font-size 0.87em
		font-weight 400
	&-descLink
		color $white
		font-size 0.87em
		font-weight 400
		cursor pointer
		text-decoration underline
		
	&-closeBtn
		cursor pointer
		position absolute
		top 25px
		right 25px
		display inline-block
		width 20px
		height 20px
		color $blue
		// color $white
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.How
		&-title
			font-size 1.7em
		&-item
			display flex			
			box-sizing border-box			
			flex-flow column nowrap
			justify-content space-between
			align-items center
		// &-img
		// 	max-width 214px
		&-itemTitle
			font-size 1.5em
			font-weight 400