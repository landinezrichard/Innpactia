/*FOOTER INTERNA*/

.FootInt
	display inline-block
	width 100%
	position fixed
	bottom 0
	left 0
	right 0
	z-index 99999
	border-top 3px solid $blue5
	box-shadow 0 -3px 0 $blue
	height 62px
	line-height 62px
	background $white

	&-logoLink
		cursor pointer
		display inline-block
		cursor pointer		
		background url('../images/01-index/logo-innpactia.png') center no-repeat		
		margin 0
		margin-left 10px
		
	&-logo
		margin 0
		text-indent -9999px
	&-menu		
		float right
		margin 0
		padding 0
		border 0
		vertical-align baseline
		box-sizing border-box
	&-menuList
		list-style none
		padding 0
		margin 0 0
		overflow-x hidden
		overflow-y scroll
		height 80vh
		display none
		float right
		clear both
		position absolute
		bottom 68px
		left 0
		right 0
		background $blue
		& li
			display inline-block
			margin 0
			float left
			width 100%
			&:hover
				background $blue5
				
			&:nth-last-child(1)
				& a
					border-right none
		& li a
			cursor pointer
			line-height 34px
			padding 0 10px
			color $white
			font-weight 400
			font-size .75em
			display inline-block
			width 100%
			height 100%			
			
	&-menuItem
		display inline-block
		margin 0
		float left
		&:hover
			background $blue
			.FootInt-menuLink
				color $white
		// &:nth-last-child(2)
		&:nth-last-child(1)
			.FootInt-menuLink
				border-right none
	&-menuLink
		cursor pointer
		line-height 34px
		padding 0 10px
		color $blue
		font-weight 400
		font-size .75em
		display inline-block
				
		
		& .fa.fa-bars
			margin 0
	&-menuBtn
		display inline-block
		margin 0
		float left
		& a
			border none
		&:hover
			background $blue
			& a
				color $white
		
		& .FootInt-menuLink
			font-size 2em
			line-height inherit
		
@media screen and (min-width:900px)
	.FootInt		
		&-menuBtn
			display none !important
		&-menuList
			background $white
			position static
			display inline-block !important
			overflow-y hidden
			height auto
			& li
				width auto
				display inline-block
				&:hover
					background $blue
					& a
						color $white
			& li a
				color $blue
				border-right 1px solid $blue
				width auto
				height auto			

		&-menuItem
			display inline-block
		
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.FootInt
		&-logoLink			
			background url('../images/01-index/logo-innpactia.png') center no-repeat
			margin-left 20px
		&-menuList			
			overflow-x hidden
			display inline-block
			& li
				margin 0
				display inline-block
			& li a
				font-size .89em
				padding 0 11px
		&-menuItem
			display inline-block
			margin 0		
@media screen and (min-width:1280px)
	.FootInt
		&-menuList
			& li a
				font-size .99em
				padding 0 20px