/*NOSOTROS*/

.Nosotros
	display inline-block
	width 100%
	min-height 100vh
	background url('../images/04-planes/Fondo_Planes.jpg') center top no-repeat
	background-size cover
	float left
	position absolute
	top 0
	
	& .u-centrar
		height 100vh
		display table

	&-container
		display table-cell
		vertical-align middle
		width 100%
		min-height 91vh		
		background $transparent_white2
		padding-bottom 68px
		
	&-list
		display inline-block
		width 100%
		margin 50px 0
		
	&-up
		display inline-block
		width 100%
		
	&-item
		display inline-block
		vertical-align bottom
		box-sizing border-box
		position relative	
		
		&:nth-child(1)
			width 260px
			height 260px
			border 20px solid #108FCF
			border-radius 50%
			margin 170px 46px 0 266px
			
			& img
				position relative
				top 15%
				
			& .Nosotros-itemTxt
				background #108FCF
				position absolute
				top -213px
				
		&:nth-child(2)
			width 190px
			height 190px
			border 13px solid #108FCF
			border-radius 50%
			margin 40px 195px 40px 46px
			
			& img
				position relative
				top 35%
				
		&:nth-child(3)
			width 346px
			height 346px
			border 28px solid #108FCF
			border-radius 50%
			margin 38px 50px 0
			
			& img
				position relative
				top 30%
				
		&:nth-child(4)
			width 240px
			height 240px
			border 20px solid #108FCF
			border-radius 50%
			margin 0 25px 150px 50px
			
			& img
				position relative
				top 40%
				
		&:nth-child(5)
			width 277px
			height 277px
			border 20px solid #2A3B8F
			border-radius 50%
			margin 0 0  150px 25px
			
			& img
				position relative
				top 20%
				width 145px
	&-itemTxt
		padding 4px
		& p
			font-family 'HelveticaNeueLight'
			font-weight 300
			font-size 13px
			