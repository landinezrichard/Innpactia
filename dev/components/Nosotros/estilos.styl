/*NOSOTROS*/

.Nosotros
	display inline-block
	width 100%
	min-height 100vh
	background url('../images/04-planes/Fondo_Planes.jpg') center top no-repeat
	background-size cover
	float left
	position absolute
	top 0
	// left -100%
	z-index 1
	
	& .u-centrar
		height 100vh
		display table
		padding-bottom 68px

	&-container
		display table-cell
		vertical-align middle
		width 100%
		min-height 100vh		
		background $transparent_white2
		padding-bottom 136px
		
	&-list
		display inline-block
		width 100%
		margin 50px 0
		
	&-up
		display inline-block
		width 100%
		
	&-item
		display inline-block
		vertical-align top
		position relative
		width 95%
		margin 10px 0
		
		&:nth-child(1)			
			
			& .Nosotros-itemTxt
				background #108FCF								
				width 80%				
			
			& .Nosotros-circle
				width 260px
				height 260px
				border 20px solid #2A3B8F
				
			& .Nosotros-circle img
				position relative
				top 15%
				
			& .Nosotros-union
				bottom 0
				right 0
				margin-bottom -72px
				margin-right -34px
				width 158px
				height 148px
				background url('../images/03-nosotros/union-back_big.png')
				
		&:nth-child(2)			
			
			& .Nosotros-itemTxt
				background #2A3B8F
			
			& .Nosotros-circle
				width 260px
				height 260px
				border 20px solid #108FCF
			
			& .Nosotros-circle img
				position relative
				top 35%
				
			& .Nosotros-union
				bottom 0
				right 0
				margin-bottom -50px
				margin-right -35px
				width 120px
				height 104px
				background url('../images/03-nosotros/union-back_small.png')
			
		&:nth-child(3)			
			
			& .Nosotros-itemTxt
				background #108FCF				
				width 80%
			
			& .Nosotros-circle
				width 260px
				height 260px
				border 20px solid #2A3B8F
			
			& .Nosotros-circle img
				position relative
				top 30%
				
			& .Nosotros-union
				top 0
				right 0
				margin-top -110px
				margin-right -40px
				width 193px
				height 193px
				background url('../images/03-nosotros/union-diag_big.png')		
			
		&:nth-child(4)			
			
			& .Nosotros-itemTxt
				background #108FCF				
				width 95%	
			
			& .Nosotros-circle
				width 260px
				height 260px
				border 20px solid #108FCF
			
			& .Nosotros-circle img
				position relative
				top 40%
				
			& .Nosotros-union
				top 0
				right 0
				margin-top -70px
				margin-right -28px
				width 140px
				height 136px
				background url('../images/03-nosotros/union-diag_small.png')
			
		&:nth-child(5)
			
			& .Nosotros-itemTxt
				background #2A3B8F				
				width 95%
			
			& .Nosotros-circle
				width 260px
				height 260px
				border 20px solid #2A3B8F
			
			& .Nosotros-circle img
				position relative
				top 20%
				width 145px
				height auto
		
	&-circle
		position relative
		display inline-block
		z-index 2
		background $white
		border-radius 50%
		box-sizing border-box
		cursor pointer
		
		& img
			width: auto;
			height: auto;
					
	&-itemTxt
		padding 8px
		position static
		z-index 1		
		margin 0 auto
		left 0
		right 0
		display none
		box-sizing border-box
		& p
			font-family 'HelveticaNeueLight'
			font-weight 300
			font-size 13px
			color $white
			text-align justify
			margin 0
	&-union
		display none
		
	&-imagenInfo
		display inline-block		
		max-width 630px
		
		& img
			width 100%
			height auto
		
		
// @media screen and (min-width:480px)

@media screen and (min-width:600px)
	.Nosotros
		&-item
			width 45%
			

// @media screen and (min-width:720px)

@media screen and (min-width:1050px)
	.Nosotros
		&-union
			display block
			position absolute
			
		&-item
			width auto
			vertical-align bottom
			
			&:nth-child(1)
				margin 170px 46px 0 266px
			
				& .Nosotros-itemTxt
					background #108FCF
					bottom 140px
					padding-bottom 120px
					width 80%
					
				& .Nosotros-circle
					width 260px
					height 260px
					border 20px solid #108FCF
					
			&:nth-child(2)
				margin 40px 195px 14px 46px
				border 6px solid #2A3B8F
				border-radius 50%
			
				& .Nosotros-itemTxt
					background #2A3B8F
					bottom 118px
					padding-bottom 92px
					
				& .Nosotros-circle
					width 190px
					height 190px
					border 13px solid #108FCF
					
			&:nth-child(3)
				margin 0 50px 88px
			
				& .Nosotros-itemTxt
					background #108FCF
					top 255px
					padding-top 95px
					width 80%
					padding-bottom 38px
					
				& .Nosotros-circle
					width 346px
					height 346px
					border 28px solid #108FCF
					
			&:nth-child(4)
				margin -5px 25px 231px 0
			
				& .Nosotros-itemTxt
					background #108FCF
					top 130px
					padding-top 130px
					width 95%
				& .Nosotros-circle
					width 240px
					height 240px
					border 20px solid #108FCF
					
			&:nth-child(5)
				margin -42px 0  231px 25px
			
				& .Nosotros-itemTxt
					background #2A3B8F
					top 150px
					padding-top 130px
					width 95%
					
				& .Nosotros-circle
					width 277px
					height 277px
					border 20px solid #2A3B8F
				
		&-itemTxt
			position absolute
		
		&-imagenInfo
			margin -35px 32px 0 370px
			float right

@media screen and (min-width:1100px)
	.Nosotros
		&-imagenInfo
			margin -35px 96px 0 0
			float right  	