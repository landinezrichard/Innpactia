/*SLIDER COLOR*/

.SliderColor
	display inline-block
	width 100%
	background $fucsia
	
	&-item
		display inline-block
		width 100%
		max-width 1035px
		margin 20px auto
	&-izq
		display inline-block
		width 30%
		vertical-align middle
		margin 0 2%
	&-der
		width 60%
		display inline-block
		vertical-align middle
		margin 0 2%
	&-txt
		text-align left
		color $white
		font-weight 300
		font-size 0.92em
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.SliderColor
		&-item
			margin 40px auto
		&-txt
			font-size 1.32em