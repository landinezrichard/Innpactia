/*BANNER*/

.Banner
	display inline-block
	width 100%
	background $blue
	text-align center
	position relative
	margin-top 46px
	
	&-slider
		z-index 0
		position relative
		text-align center
		// max-height 600px

	// &-item

	&-imageContainer
		& img	
			width 100%
			height 100%
			margin-bottom -5px
	&-image
		width 100%
		margin-bottom -5px

	&-text
		position absolute		
		width 100%		
		margin 0 auto
		z-index 25
		text-align center
		color $white
		top 50%
		left 0
		transform translateY(-50%)			

	&-textContainer
		width 100%
		height 100%
		margin 0px auto
		max-width 1200px		
		box-sizing border-box		
		position relative
	
	&-textContainer p
		display none
		font-size 0.75em
		margin 0
	&-title
		margin 0
		font-size 1.12em
		font-weight 600

	&-p
		display none
		font-size 0.75em
		margin 0
	/*Boton Como funciona*/
	&-btn
		cursor pointer
		color $white
		background $transparent_white
		width 140px
		height 40px
		line-height 40px
		display inline-block
		margin .5em auto
		&:hover
			background $transparent_black
	/*Busqueda*/
	&-search
		background $blue
		display inline-block
		width 100%
	&-field
		border none
		margin 15px
		padding 0
	&-input
		border-radius 10px
		padding .2em
		vertical-align middle
	&-btnBuscar
		border none
		background url('../images/01-index/lupa.png') center no-repeat
		width 26px
		height 31px
		vertical-align middle
		margin 0 5px
	&-menu
		display none
		width 100%
	&-menulist
		list-style none
		padding 0
		margin 0 0
		width 100%
	&-menuItem
		display inline-block
		float left		
		height 30px
		line-height 30px
		&:hover
			background $blue
	&-menuLink
		width 100%
		color $white
		font-size .75em
		cursor pointer
		display block

/*Controles OWl*/
.Banner-slider.owl-carousel .owl-controls .owl-nav
	margin-top 0

.Banner-slider.owl-carousel .owl-controls .owl-dots
	position absolute
	right 40px
	top 40%
	
.Banner-slider.owl-carousel .owl-controls .owl-dots .owl-dot
	display block
	
.Banner-slider.owl-carousel .owl-controls .owl-dots .owl-dot span
	width 10px
	height 10px
	background transparent
	border-radius 50%
	border 1px solid $white
	
.Banner-slider.owl-carousel .owl-controls .owl-dots .owl-dot.active span
	background-color $white

