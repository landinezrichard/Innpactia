@media screen and (min-width:480px)
	.Banner		
		&-btn
			margin 1em auto
		/*Menu-busqueda*/
		&-menu
			display block
		&-menulist
			display flex
			justify-content space-around
			align-content stretch
			flex-flow row nowrap
		&-menuItem
			flex-grow 1
			
@media screen and (min-width:600px)
	.Banner
		&-textContainer p
			display block
			font-size 0.87em
		&-p
			display block
			font-size 0.87em
@media screen and (min-width:720px)
	.Banner
		margin-top 60px
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Banner		
		&-title
			font-size 1.5em
		&-textContainer p
			font-size 0.95em
		&-p
			font-size 0.95em
		/*Busqueda*/
		&-search
			position absolute
			bottom 45px
			left 0
			right 0
			max-width 733px
			margin 0 auto
		&-menuItem
			width 14.28%
			
/*Desktop*/
@media screen and (min-width:1280px)
	.Banner
		&-title
			font-size 2.5em
		&-textContainer p
		&-p
			font-size 0.97em
@media screen and (min-width:1440px)
	.Banner
		&-title
			font-size 3.02em
		&-textContainer p
		&-p
			font-size 1.15em