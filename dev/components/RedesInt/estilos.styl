/*REDES INTERNA*/

.RedesInt
	display inline-block
	left 0
	margin 0
	padding 0
	text-align center	
	// height 64px
	background $transparent_blue
	
	&-aBtn
		cursor pointer
		display inline-block
		width 100%
		height 100%
	&-img
		vertical-align middle
	&-all		
		display block	
		list-style none
		padding 0
		margin 0 0
		
		& li
			display inline-block
			width 32px
			height 32px
			margin 10px
			// line-height 32px
			&:hover
				animation animateRedes 1s infinite
		
		& li a
			cursor pointer
			display inline-block
			width 100%
			height 100%
		
		& li a img
			vertical-align middle
		// 	width 100%
		// 	height 100%
		
	// &-item
	// 	display inline-block
	// 	width 64px
	// 	height 64px
	// 	line-height 64px
		
	// 	&:hover
	// 		animation animateRedes 1s infinite
		
@keyframes animateRedes
	16.65%
		transform translateX(2px)
	33.3%
		transform translateX(-2px)
	49.95%
		transform translateX(2px)
	66.6%
		transform translateX(-2px)
	83.25%
		transform translateX(1px)
	100%
		transform translateX(0)
		
@media screen and (min-width:840px)
	.RedesInt
		left 0
		position fixed
		top 50%
		z-index 999
		background transparent
		transform translateY(-50%)
		
		&-all
			width 52px
			& li
				display block
@media screen and (min-width:840px) and (min-height:640px)
	.RedesInt		
		top 30%	
		transform inherit	
		
		&-all
			width 52px
			
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.RedesInt		
		top 40%	
		left 30px