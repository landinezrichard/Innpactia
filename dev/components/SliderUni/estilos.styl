/*SLIDER UNICEF*/

.SliderUni
	display inline-block
	width 100%
	background $white
	
	&-item
		display inline-block
		width 100%
		max-width 1035px
		margin 20px auto
	&-izq
		display inline-block
		width 60%
		vertical-align top
		margin 0 2%
	&-der
		width 30%
		display inline-block
		vertical-align top
		margin 0 2%
	&-title
		color $gray
		font-weight 400
		font-size 0.92em
		text-align right
	&-txt
		text-align right
		color $gray
		font-weight 300
		font-size 0.81em
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.SliderUni
		&-item
			margin 40px auto
		&-title
			font-size 1.32em
		&-txt
			font-size 1.15em