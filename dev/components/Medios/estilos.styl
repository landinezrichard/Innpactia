/*MEDIOS*/

.Medios
	display inline-block
	width 100%
	min-height 100vh
	background url('../images/06-trabaja/logo_innpactia_big.png') center left no-repeat	
	background-attachment fixed
	
	& .u-centrar
		min-height 100vh

	&-container
		display inline-block
		width 100%
		background $white		
		min-height 91vh		
		padding-bottom 68px
		
	&-item
		display inline-block
		max-width 256px
		margin 10px 18px
		
	&-img
		width 100%
		height 118px
		
		& img
			width 100%
			height 100%
			vertical-align bottom
	
	&-fecha
		display inline-block
		width 100%
		padding 20px 0
		text-align left

	&-line
		width 100px
		height 5px
		background $black
		display inline-block
		vertical-align middle		
		
	&-date
		text-align center
		display inline-block
		vertical-align middle
		font-size 12px
		font-family 'HelveticaNeueLight'
		font-weight 300		
		margin-left 8px
		
	&-content
		display inline-block
		width 100%
		// min-height 234px
		text-align justify
		
		& p
			margin 0
			text-align justify
			color $black
			font-size 15px
			font-family 'HelveticaNeueLight'
			font-weight 300
			margin-bottom 1em
	&-title
		text-align justify
		margin 0		
		font-size 17.65px
		color $black
		font-weight 700
		
	&-btnContainer
		width 100%
		display inline-block
		text-align center
		
		& a
			display inline-block
			width 160px
			height 34px
			line-height 34px
			color $white
			background #27348B
			cursor pointer
			
@media screen and (min-width:600px)
	.Medios
		
		&-item		
			margin 23px 18px

		&-content		
			min-height 234px
			
@media screen and (min-width:1280px)
	.Medios
		&-container
			text-align left