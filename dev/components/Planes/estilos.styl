/*PLANES*/

.Planes
	display inline-block
	width 100%
	background url('../images/04-planes/fondo-planes.jpg') center top no-repeat
	background-size cover
	float left
	position absolute
	top 0
	left -100%
	z-index 1
	
	& .u-centrar		
		display table		

	&-container
		display table-cell
		vertical-align middle
		width 100%
		min-height 100vh
		max-width 700px
		background $transparent_white2
		padding 0 20px 68px
		box-sizing border-box
		
		
		& p
			font-weight 400
			font-size 0.87em
			color $blue
			text-align left			
				
		& p img
			width 100%
			height 100%
		
	&-title
		font-weight 700
		font-size 24px
		color $blue
		
	&-txt
		font-weight 400
		font-size 0.87em
		color $blue
		margin 1em 24px
		
	&-table
		display inline-block
		width 95%
		margin 20px 2.5%
		
	&-btnContainer
		display inline-block
		width 100%
		margin 20px 0
	&-btn
		cursor pointer
		display inline-block
		width 130px
		height 32px
		line-height 32px
		color $white
		background $blue
/*Tablet Landscape*/
@media screen and (min-width:1024px)
	.Planes
		&-container
			& p
				font-size 0.97em

		&-txt
			font-size 0.97em