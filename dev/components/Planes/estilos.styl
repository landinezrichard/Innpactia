/*PLANES*/

.Planes
	display inline-block
	width 100%
	// height 100%
	min-height 100vh
	background url('http://lorempixel.com/1920/1024/nature') center top no-repeat
	background-size cover
	
	& .u-centrar
		height 100%

	&-container
		display inline-block
		width 100%
		// height 100%
		min-height 100vh
		max-width 700px
		background $transparent_white2
		padding-bottom 100px
		
	&-title
		font-weight 700
		font size 2.2em
		color $blue
		
	&-txt
		font-weight 400
		font-size 0.87em
		color $blue
		margin 1em 24px
		
	&-table
		display inline-block
		width 95%
		margin 20px 2.5%
		
	&-btnContainer
		display inline-block
		width 100%
		margin 20px 0
	&-btn
		cursor pointer
		display inline-block
		width 130px
		height 32px
		line-height 32px
		color $white
		background $blue