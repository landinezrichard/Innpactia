$transparent_blue = rgba(0,144,208,0.7)

$light_blue = #afd9ec


html
	font-size 16px
	font-family: 'HelveticaNeue', sans-serif
	width 100%
	height 100%

body
	background $white
	width 100%
	height 100%
	
img
	max-width 100%
	max-height 100%

a
	text-decoration none
	
.u-centrar
	margin 0 auto
	max-width 1200px
	text-align center
	
.bg-blue1
	background $blue
.bg-blue2
	background $blue2
.bg-blue3
	background $blue3
.bg-blue4
	background $blue4
.bg-blue5
	background $blue5
.bg-blue6
