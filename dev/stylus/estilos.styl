/*Controles Next-prev Owl*/
.flecha-izq
	width 36px
	height 36px
	display inline-block
	background url('../images/01-index/left-arrow.png') center no-repeat
.flecha-der
	width 36px
	height 36px
	display inline-block
	background url('../images/01-index/right-arrow.png') center no-repeat
	
.cont_gen_terminos
	width 100%
	margin 10px 0
	display inline-block
	font-weight 400
	font-size 0.87em
	color #213f99
	text-align right
	
.cont_gen_terminos-right
	display inline-block
	float right
	margin-right 75px

	
/*Estilos generales alineaciones para el articulo*/
.center {text-align: center;}
img.center, img[align="center"] {display: block;margin-left: auto;margin-right: auto;}
.alignleft {float: left;}
img.alignleft, img[align="left"] {float:left;margin: 2px 10px 5px 0px;}
.alignright {float: right;}
img.alignright, img[align="right"] {float:right;margin: 2px 0px 5px 10px;}
.clear {clear:both;}
hr.clear {clear:both;visibility: hidden;margin: 0px;padding: 0px;height:0px;}

